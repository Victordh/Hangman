<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bubbles.hangman.MenuActivity">

    <TextView
        android:id="@+id/menu_title"
        android:text="@string/menu_normal_title"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/new_game_button"
        android:text="@string/new_game_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="new_game_button_click"
        android:layout_below="@+id/menu_title"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/instructions_button"
        android:layout_alignStart="@+id/instructions_button" />

    <Button
        android:id="@+id/instructions_button"
        android:text="@string/instructions_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_game_button"
        android:layout_marginTop="@dimen/buttons_landscape"
        android:layout_centerHorizontal="true"
        android:onClick="instructions_button_click" />

    <Button
        android:id="@+id/high_scores_button"
        android:text="@string/high_scores_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructions_button"
        android:layout_marginTop="@dimen/buttons_landscape"
        android:layout_centerHorizontal="true"
        android:onClick="high_scores_button_click" />

    <Button
        android:id="@+id/settings_button"
        android:text="@string/settings_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/high_scores_button"
        android:layout_marginTop="@dimen/buttons_landscape"
        android:layout_centerHorizontal="true"
        android:onClick="settings_button_click" />
</RelativeLayout>
